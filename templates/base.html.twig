<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="La boutique d'ameublement & plus 100% fait main.">

        <!-- ===== FAVICON ===== -->
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('assets/img/favicon/apple-touch-icon.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('assets/img/favicon/favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('assets/img/favicon/favicon-16x16.png') }}">
        <link rel="manifest" href="{{ asset('assets/img/favicon/site.webmanifest') }}">

        <!-- ===== BOXICONS ===== -->
        <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>

        <!--=============== SWIPER CSS ===============-->
        <link rel="stylesheet" href="{{ asset('assets/css/swiper-bundle.min.css') }}">

        <!-- ===== CSS ===== -->
        <link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}">

        <!-- ===== STRIPE JS ===== -->
        <script src="https://js.stripe.com/v3/"></script>

        <title>
            {% block title %}
                L&A WoodFactory • Mobilier & co
            {% endblock %}
        </title>
    </head>
    <body>
        <!--===== HEADER =====-->
        <header class="header">
            <nav class="nav grid">
                <div>
                    <a href="{{ path('home') }}" class="nav__logo active-link">
                        <img src="{{ asset('assets/img/logo.png') }}" alt="">
                    </a>
                </div>

                <div class="nav__menu" id="nav-menu">
                    <ul class="nav__list">
                        <li class="nav__item">
                            <a href="{{ path('product') }}" class="nav__link">Produits</a>
                        </li>
                        <li class="nav__item">
                            <a href="{{ path('service') }}" class="nav__link">Services</a>
                        </li>
                        <li class="nav__item">
                            <a href="{{ path('home') }}#contact" class="nav__link">Contact</a>
                        </li>
                        {% if app.user %}
                            <li class="nav__item nav__item-mobile">
                                <a href="{{ path('account') }}" class="nav__link">Mon compte</a> | <a href="{{ path('logout') }}" class="nav__link">Déconnexion</a>
                            </li>
                        {% else %}
                            <li class="nav__item nav__item-mobile">
                                <a href="{{ path('login') }}" class="nav__link">Connexion</a> | <a href="{{ path('register') }}" class="nav__link">Inscription</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>

                <div>
                    <a href="{{ path('cart') }}"><i class='bx bx-cart nav__cart'></i></a>
                    <i class='bx bx-menu nav__toggle' id="nav-toggle"></i>
                </div>
            </nav>
            <nav class="nav__connection container">
                <div class="nav__connection-menu" id="nav-menu">
                    <ul class="nav__connection-list">
                        {% if app.user %}
                            <li class="nav__item">
                                <a href="{{ path('account') }}" class="nav__link">Mon compte</a><span>|</span><a href="{{ path('logout') }}" class="nav__link">Déconnexion</a>
                            </li>
                        {% else %}
                            <li class="nav__item">
                                <a href="{{ path('login') }}" class="nav__link">Connexion</a><span>|</span><a href="{{ path('register') }}" class="nav__link">Inscription</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </nav>
        </header>

        <main class="main">
            {% block content %}
            {% endblock %}

        </main>

        <!--===== FOOTER =====-->
        <footer class="footer section">
            <div class="footer__container grid">
                <div class="footer__box">
                    <h3 class="footer__title">L&A <br>WOODFACTORY</h3>
                    <p class="footer__deal">Mobilier kid & co</p>
                </div>

                <div class="footer__box">
                    <h3 class="footer__title">EXPLORER</h3>
                    <ul>
                        <li><a href="{{ path('home') }}" class="footer__link">Accueil</a></li>
                        <li><a href="{{ path('product') }}" class="footer__link">Produits</a></li>
                        <li><a href="{{ path('service') }}" class="footer__link">Services</a></li>
                        <li><a href="{{ path('home') }}#contact" class="footer__link">Contact</a></li>
                    </ul>
                </div>

                <div class="footer__box">
                    <h3 class="footer__title">NOS SERVICES</h3>
                    <ul>
                        <li><a href="#" class="footer__link">Tarif</a></li>
                        <li><a href="#" class="footer__link">Livraison</a></li>
                        <li><a href="{{ path('condition') }}" class="footer__link">Conditions générales</a></li>
                    </ul>
                </div>

                <div class="footer__box footer__box-social">
                    <h3 class="footer__title">SUIVEZ NOUS</h3>
                    <div class="footer__socials">
                        <a href="#" class="footer__social"><i class='bx bxl-facebook-square' ></i></a>
                        <a href="#" class="footer__social"><i class='bx bxl-instagram-alt' ></i></a>
                        <a href="#" class="footer__social"><i class='bx bxl-twitter' ></i></a>
                    </div>
                </div>

            </div>
        </footer>

        <!--=============== SWIPER JS ===============-->
        <script src="{{ asset('assets/js/swiper-bundle.min.js') }}"></script>

        <!--===== MAIN JS =====-->
        <script src="{{ asset('assets/js/main.js') }}"></script>

        {% block JavaScript %}
        {% endblock %}

    </body>
</html>