{% extends 'admin.html.twig' %}

{% block title %}Transporteurs â€¢ L&A WoodFactory{% endblock %}

{% block content %}
    <section class="account section" id="account">
        <h2 class="account__title">Vos transporteurs</h2>
        <a href="{{ path('admin') }}" class="account__back"><i class='bx bx-arrow-back'></i></a>
        <h3 class="account__subtitle">{{ app.user.firstname }}, c'est dans cet espace que vous allez pouvoir voir, ajouter, modifier et supprimer un transporteur.</h3>


        <div class="account__container-mobile grid">
            <a href="{{ path('admin_carrier_add') }}">
                <div class="account__box" style="background: url({{ asset('assets/img/admin/carrier/add.jpg') }}) no-repeat center center; background-size: cover;">
                    <div class="account__link-mobile account__link-product">
                        <span class="button button__white">AJOUTER UN TRANSPORTEUR</span>
                    </div>
                </div>
            </a>
            {% for carrier in carriers %}
                <a href="{{ path('admin_carrier_edit', {id: carrier.id}) }}">
                    <div class="account__box" style="background-color: var(--first-color-alt);">
                        <div class="account__link-mobile account__link-product">
                            <span class="account__link-title">{{ carrier.name }}</span>
                            <span class="button button__white">MODIFIER</span>
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>

        <div class="account__product-container grid">
            <div class="account__box" style="background: url({{ asset('assets/img/admin/carrier/add.jpg') }}) no-repeat center center; background-size: cover;">
                <div class="account__link account__link-product">
                    <a href="{{ path('admin_carrier_add') }}" class="button button__white">AJOUTER UN TRANSPORTEUR</a>
                </div>
            </div>
            {% for carrier in carriers %}
                <div class="account__box" style="background-color: var(--first-color-alt);">
                    <span class="account__link-title account__link-titleCarrier">{{ carrier.name }}</span>
                    <div class="account__link account__link-product">
                        <a href="{{ path('admin_carrier_edit', {id: carrier.id}) }}" class="button button__white">MODIFIER</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
